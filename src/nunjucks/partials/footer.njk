<script type="text/javascript">
$(document).ready(function() {
  let $window = $(window);
  let $footer = $('footer');
  let ratio = $window.height() / $window.width();
  if (ratio <= 0.65) {
    $footer.removeClass('hidden');
  } else {
    if (!$footer.hasClass('hidden')) {
      $footer.addClass('hidden')
    }
  }
  $window.resize(function() {
    let ratio = $window.height() / $window.width();
    if (ratio <= 0.65) {
      $footer.removeClass('hidden');
    } else {
      if (!$footer.hasClass('hidden')) {
        $footer.addClass('hidden')
    	}
  	}
  });
});
</script> 
